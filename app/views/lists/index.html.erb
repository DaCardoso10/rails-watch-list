<div class="jumbotron jumbotron-fluid">

  <h1 class="display-4">Mis listas de peliculas</h1>

</div>
<div class="container2">
  <div class="row">
    <% @lists.each do |list| %>
      <div class="col-md-4 mb-4">
        <div class="cards">
          <div class="card-category" style='background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= image_path "card.png" %>)'>
            <%= link_to list.name, list_path(list), style: "text-decoration: none; color: inherit" %>
          </div>
        </div>
    </div>
    <% end %>
  </div>
  <%= link_to("Nueva Lista", new_list_path) %>
</div>
